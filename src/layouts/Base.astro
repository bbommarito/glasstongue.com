---
import "../styles/global.css";
import logo from "../../public/logo.png";
import ogImage from "../../public/og-image.jpg";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="Glass Tongue — emotional brutality: poetic, guttural, surreal."
        />

        <!-- ✅ Open Graph -->
        <meta property="og:title" content="Glass Tongue" />
        <meta
            property="og:description"
            content="Brutal, surreal, and melodic — a fracture in sound."
        />
        <meta property="og:image" content={ogImage.src} />
        <meta property="og:url" content="https://glasstongue.com/" />
        <meta property="og:type" content="website" />

        <!-- ✅ Twitter Card -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content="Glass Tongue" />
        <meta
            name="twitter:description"
            content="Brutal, surreal, and melodic — a fracture in sound."
        />
        <meta name="twitter:image" content={ogImage.src} />

        <title>Glass Tongue</title>
        <link rel="icon" type="image/png" href={logo.src} />
        <link
            href="https://fonts.googleapis.com/css2?family=DM+Sans&display=swap"
            rel="stylesheet"
        />
    </head>
    <body
        class="bg-black text-gray-200 font-sans min-h-screen flex flex-col items-center px-4 py-16"
    >
        <main class="text-center space-y-10 max-w-lg">
            <slot />
        </main>
    </body>
</html>
